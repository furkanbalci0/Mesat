<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:text="KAYIT OL"
                    android:textColor="#121212"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="318dp"
                    android:layout_height="93dp"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center"
                    android:text="Kayıt olduğunuzda bazı onaylamaları, reklam bildirimlerini ve benzeri bildirimleri alabileceğinizi onaylamış olursunuz."
                    android:textColor="#191919"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <TextView
                    android:id="@+id/register_activity_login_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/abhaya_libre"
                    android:text="GİRİŞ YAP"
                    android:textColor="#121212"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/register_check_box"
                    app:layout_constraintTop_toBottomOf="@+id/register_check_box" />

                <Button
                    android:id="@+id/register_activity_register_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:backgroundTint="#2E9861"
                    android:fontFamily="@font/abhaya_libre"
                    android:letterSpacing="-0.01"
                    android:text="KAYIT OL"
                    android:textSize="24sp"
                    app:cornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/register_check_box"
                    app:layout_constraintTop_toBottomOf="@+id/register_check_box" />

                <EditText
                    android:id="@+id/editTextTextPersonPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_light"
                    android:hint="Şifreniz"
                    android:inputType="textVisiblePassword"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonPhoneNumber"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonPhoneNumber"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonPhoneNumber" />

                <EditText
                    android:id="@+id/editTextTextPersonPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_light"
                    android:hint="Telefon Numaranız"
                    android:inputType="phone"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonEMail"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonEMail"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonEMail" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_light"
                    android:hint="İsminiz"
                    android:inputType="textPersonName"
                    android:textSize="22sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="-16dp" />

                <EditText
                    android:id="@+id/editTextTextPersonSurName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_light"
                    android:hint="Soyisminiz"
                    android:inputType="textPersonName"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

                <EditText
                    android:id="@+id/editTextTextPersonEMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_light"
                    android:hint="E-Posta Adresiniz"
                    android:inputType="textEmailAddress"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonSurName"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonSurName"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonSurName" />

                <CheckBox
                    android:id="@+id/register_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Kayıt Sözleşmesini okudum ve kabul ediyorum."
                    app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonPassword"
                    app:layout_constraintStart_toStartOf="@+id/editTextTextPersonPassword"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonPassword" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>